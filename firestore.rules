rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== SUGGESTED ACTIVITIES ====================
    // Allow public read access to suggested activities (global collection)
    // These are curated activities that everyone can browse
    match /suggestedactivities/{activityId} {
      allow read: if true;  // Public read access - anyone can browse activities
      allow write: if false; // No public write - only admin can add via Firebase Console or backend
    }

    // ==================== USER DATA ====================
    // User-specific data requires authentication and ownership
    match /users/{userId} {
      // Users can only read/write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Favorites subcollection
      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Itinerary subcollection
      match /itinerary/{eventId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Webhook-generated activities subcollection
      match /webhookactivities/{activityId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ==================== FALLBACK ====================
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
