// Prisma Schema for TetrisTravel
// PostgreSQL Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - stores user profile and preferences
model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  name      String?

  // Preferences stored as JSON
  preferences Json?

  // Relations
  itinerary ItineraryEvent[]
  favorites Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Favorite attractions selected by users
model Favorite {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  attractionId Int
  src         String
  alt         String

  createdAt   DateTime @default(now())

  @@unique([userId, attractionId])
  @@map("favorites")
}

// Itinerary events (both from recommendations and calendar imports)
model ItineraryEvent {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title           String
  description     String?

  // Location data
  locationName    String
  locationLat     Float
  locationLng     Float
  locationAddress String?

  // Time data
  startTime       DateTime
  endTime         DateTime

  // Source tracking
  source          String   // 'recommendation', 'google_calendar', 'manual'
  recommendationId String?  // Link to original recommendation if applicable

  // Additional data
  image           String?
  isLocked        Boolean  @default(false) // Calendar imports are locked

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, startTime])
  @@map("itinerary_events")
}

// Recommendations cache (optional - for storing AI recommendations)
model Recommendation {
  id          String   @id @default(uuid())

  title       String
  description String

  // Location
  locationName String
  locationLat  Float
  locationLng  Float

  duration    String?
  price       String?
  image       String?
  category    String?
  tags        String[] // Array of tags

  // AI ranking (if using new architecture)
  score       Int?
  reasoning   String?

  createdAt   DateTime @default(now())

  @@map("recommendations")
}
